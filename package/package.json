{
	"name": "ya-invisible-captcha-client",
	"version": "1.0.1",
	"description": "Лёгкий клиент для невидимой Яндекс.Каптчи с поддержкой форм и модальных окон. Поддерживает auto-init через data-атрибуты и гибкое встроение в DOM.",
	"keywords": [
		"yandex",
		"captcha",
		"invisible",
		"ya-captcha",
		"form-validation",
		"security",
		"frontend",
		"typescript"
	],
	"author": "Poliklot",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"sideEffects": false,
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"release": "node scripts/release.js",
		"test": "jest --coverage",
		"versions:sync": "node scripts/sync-version.js",
		"demos": "BUILD_TARGET=demos npm run build && concurrently --kill-others \"vite\" \"npm run watch\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Poliklot/ya-invisible-captcha-client"
	},
	"bugs": {
		"url": "https://github.com/Poliklot/ya-invisible-captcha-client/issues"
	},
	"homepage": "https://github.com/Poliklot/ya-invisible-captcha-client#readme",
	"devDependencies": {
		"@babel/preset-env": "^7.26.0",
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/jest": "^30.0.0",
		"@types/jsdom": "^21.1.7",
		"chalk": "^5.3.0",
		"concurrently": "^9.0.1",
		"fs-extra": "^11.2.0",
		"inquirer": "^12.1.0",
		"jest": "^30.0.5",
		"jest-environment-jsdom": "^30.0.5",
		"jsdom": "^26.1.0",
		"ora": "^8.1.1",
		"postcss-preset-env": "^10.0.8",
		"prettier-plugin-jsdoc": "^1.3.0",
		"rollup": "^4.24.3",
		"rollup-plugin-copy": "^3.5.0",
		"rollup-plugin-delete": "^2.1.0",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-typescript2": "^0.36.0",
		"sass-embedded": "^1.80.5",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"vite": "^5.4.10"
	}
}